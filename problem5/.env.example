# Application Environment
# Options: development, production, test
NODE_ENV=development

# Server Configuration
# Port number for the HTTP server
PORT=3000

# Database Configuration
# Path to SQLite database file (relative to project root)
DB_PATH=database.sqlite

# Auto-synchronize database schema (true/false)
# WARNING: Set to false in production
DB_SYNC=true

# Enable database query logging (true/false)
# Useful for debugging, disable in production for performance
DB_LOGGING=true

# Logging Configuration
# Log levels: debug, info, warn, error
# debug: Most verbose, shows all logs
# info: General information
# warn: Warning messages only
# error: Error messages only
LOG_LEVEL=debug

# CORS Configuration
# Allowed origins for Cross-Origin Resource Sharing
# Use '*' for all origins (development only)
# Use comma-separated URLs for production: http://localhost:3000,https://yourdomain.com
CORS_ORIGIN=*

# Example production configuration:
# NODE_ENV=production
# PORT=8080
# DB_PATH=/var/lib/myapp/database.sqlite
# DB_SYNC=false
# DB_LOGGING=false
# LOG_LEVEL=error
# CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
